<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="vm"
            type="com.example.weatherappassignment.view.WeatherViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/mainContentView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/screen_margin_x"
                android:layout_marginEnd="@dimen/screen_margin_x"
                android:visibility="@{vm.state.shouldShowContentView() ? View.VISIBLE : View.GONE}"
                tools:visibility="gone">

                <EditText
                    android:id="@+id/enterCityName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/screen_margin_x"
                    android:hint="@string/enter_city_name"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    app:layout_constraintBottom_toTopOf="@id/searchButton"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/searchButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/search"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/enterCityName" />

                <TextView
                    android:id="@+id/cityName"
                    style="@style/Highlighted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{vm.state.city}"
                    app:layout_constraintBottom_toTopOf="@id/currentTemperature"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/searchButton"
                    tools:text="Stockholm" />

                <TextView
                    android:id="@+id/currentTemperature"
                    style="@style/Normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{vm.state.currentTemperature}"
                    android:textSize="50sp"
                    app:layout_constraintBottom_toTopOf="@id/currentWeather"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cityName"
                    tools:text="0 &#x00B0;C" />

                <TextView
                    android:id="@+id/currentWeather"
                    style="@style/Normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{vm.state.currentCondition}"
                    app:layout_constraintBottom_toTopOf="@id/minTemperature"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/currentTemperature"
                    tools:text="Clear" />

                <TextView
                    android:id="@+id/minTemperature"
                    style="@style/Normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/screen_margin_x"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="@dimen/screen_margin_x"
                    android:layout_marginBottom="@dimen/screen_margin_x"
                    android:text="@{vm.state.minTemperature}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/currentWeather"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/currentWeather"
                    tools:text="Min -5 &#x00B0;C" />

                <TextView
                    android:id="@+id/maxTemperature"
                    style="@style/Normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/screen_margin_x"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="@dimen/screen_margin_x"
                    android:layout_marginBottom="@dimen/screen_margin_x"
                    android:text="@{vm.state.maxTemperature}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/currentWeather"
                    app:layout_constraintTop_toBottomOf="@id/currentWeather"
                    tools:text="Max 5 &#x00B0;C" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/screen_margin_x"
                android:indeterminate="false"
                android:visibility="@{vm.state.isLoading ? View.VISIBLE : View.GONE}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/errorView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="@{vm.state.shouldShowErrorView() ? View.VISIBLE : View.GONE}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="gone">

                <TextView
                    android:id="@+id/errorMessage"
                    style="@style/Normal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/screen_margin_x"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="@dimen/screen_margin_x"
                    android:text="@{vm.state.errorMessage}"
                    android:textAlignment="center"
                    app:layout_constraintBottom_toTopOf="@id/tryAgain"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Location not provide" />

                <Button
                    android:id="@+id/tryAgain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="@{()-> vm.refreshState()}"
                    android:text="@string/try_again"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/errorMessage" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>
